server {
    listen 80 default_server;
    listen [::]:80 default_server;

    access_log /var/log/nginx/nestbox.access.log;
    error_log /var/log/nginx/nestbox.error.log;

    location / {
        return 307 https://$host$request_uri;
    }
}

server {
    listen 443 default_server;
    listen [::]:443 default_server;

    access_log /var/log/nginx/nestbox.access.log;
    error_log /var/log/nginx/nestbox.error.log;
    root /var/www/html;

    include /etc/nginx/locations/https-enabled/*;

    ssl on;
    ssl_certificate /etc/nestbox/https/public-certificate.pem;
    ssl_certificate_key /etc/nestbox/https/private-key.pem;
}