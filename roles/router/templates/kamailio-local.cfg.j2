/* add API address used for routing */
#!define HTTP_API_ROUTING_ENDPOINT "{{ router_api_endpoint_confd }}/kamailio/routing"

/* add API address used for CDRs */
#!define HTTP_API_CDR_ENDPOINT "{{ router_api_endpoint_confd }}/kamailio/cdr"

/* add API http timeout */
#!define HTTP_API_TIMEOUT 5000

/* set the list of RTPengine instances */
#!define RTPENGINE_LIST "udp:localhost:22222"

/* add listen protocol, address and port / advertise (optional) */
{% if router_advertise_address is defined and router_advertise_address and router_advertise_port is defined and router_advertise_port %}
#!define LISTEN udp:{{ ansible_default_ipv4.interface }}:5060 advertise {{ router_advertise_address }}:{{ router_advertise_port }}
{% else %}
#!define LISTEN udp:{{ ansible_default_ipv4.interface }}:5060
{% endif %}